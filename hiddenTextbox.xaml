<UserControl x:Class="ASS_2025.hiddenTextbox" HorizontalAlignment="Center" VerticalAlignment="Center"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ASS_2025"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox MinWidth="10" Name="internalItem" Tag="{Binding Text}" TextChanged="internalItem_TextChanged" MouseDown="TextBox_MouseDown"></TextBox>  
    </Grid>
</UserControl>
